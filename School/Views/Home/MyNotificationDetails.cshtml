@model ACM.ViewModels.UserMyNotificationsViewModel.UserMyNotificationDetailsViewModel
@inject IStringLocalizer<SessionStringLocalizer> Localizer
@{
    ViewData["Title"] = Localizer[PublicEnums.LocalizationKeys.My_Notification_Details];
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.MenuTab = "menu-dashboard";
    ViewBag.MenuSubTab = "";
}


@section Scripts
    {
    <script type="text/javascript">
        $(function () {

        });
    </script>
}
<div>
    <div class="content-header row">
        <div class="content-header-left col-md-6 col-12 mb-2 breadcrumb-new">
            <h3 class="content-header-title mb-0 d-inline-block">@Localizer[PublicEnums.LocalizationKeys.My_Notifications]</h3>
            <div class="row breadcrumbs-top d-inline-block">
                <div class="breadcrumb-wrapper col-12">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a>@Localizer[PublicEnums.LocalizationKeys.Home]</a>
                        </li>
                        <li class="breadcrumb-item active">
                            <a href="/Home/MyNotifications">@Localizer[PublicEnums.LocalizationKeys.My_Notifications]</a>
                        </li>
                        <li class="breadcrumb-item active">
                            @Localizer[PublicEnums.LocalizationKeys.Details]
                        </li>
                    </ol>
                </div>
            </div>
        </div>
    </div>
    <div class="content-body">
        <div class="card">
            <div class="card-content collapse show">
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(ViewBag.Error))
                    {
                        <div class="alert alert-danger mb-2" role="alert">
                            <strong>@Localizer[PublicEnums.LocalizationKeys.Alert]!</strong> @ViewBag.Error
                        </div>
                    }
                    else if (!string.IsNullOrEmpty(ViewBag.Success))
                    {
                        <div class="alert alert-success mb-2" role="alert">
                            <strong>@Localizer[PublicEnums.LocalizationKeys.Success]!</strong> @ViewBag.Success
                        </div>
                    }
                    <h4 class="form-section">
                        <i class="far fa-question-circle"></i> @Localizer[PublicEnums.LocalizationKeys.Details]
                    </h4>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="Title">@Localizer[PublicEnums.LocalizationKeys.Title] </label>
                                <input type="text" class="form-control" asp-for="Title">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="Subject">@Localizer[PublicEnums.LocalizationKeys.Subject] </label>
                                <input type="text" class="form-control" asp-for="Subject">
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="Subject">@Localizer[PublicEnums.LocalizationKeys.Received] </label>
                                <input type="text" class="form-control" asp-for="Received">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label for="Subject">@Localizer[PublicEnums.LocalizationKeys.Read] </label>
                                @if (Model.IsRead)
                                {
                                    <i class="fa fa-check"></i>
                                }
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <label for="Subject">@Localizer[PublicEnums.LocalizationKeys.Body] </label>
                            <iframe frameborder="0" width="100%" height="650px" scrolling="auto" src="/home/MyNotificationBody/@Model.UserInAppNotificationID"></iframe>
                        </div>
                    </div>
                    <div class="form-actions text-right">
                        <a href="/Home/MyNotifications" class="btn btn-default mr-1">
                            <i class="ft-x"></i> @Localizer[PublicEnums.LocalizationKeys.Back_to_list]
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>